# MongoDB
MONGODB_URI=mongodb://admin:password@mongodb:27017/goshala?authSource=admin
MONGODB_DB=goshala

# Auth/JWT
# Used by next-auth jwt token signing and middleware getToken secret
JWT_SECRET=your-jwt-secret-here

# NextAuth (optional but recommended)
# NEXTAUTH_URL should match your site URL in production; for dev it's usually http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
# If you switch authOptions.secret to NEXTAUTH_SECRET, set it here instead of JWT_SECRET
NEXTAUTH_SECRET=your-nextauth-secret-here

# Twilio (for SMS/WhatsApp notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_URL=redis://redis:6379